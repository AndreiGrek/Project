<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activities.fragments.EditContragentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textEdit"
                style="@style/TextViewStyle"
                android:text="Edit Contragent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editName"
                style="@style/EditTextStyle"
                android:hint="Название Контрагента"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textEdit" />

            <EditText
                android:id="@+id/editPhone"
                style="@style/EditTextStyle"
                android:hint="+375 (29) XXX-XX-XX"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editName" />

            <EditText
                android:id="@+id/editDescription"
                style="@style/EditTextStyle"
                android:layout_height="100dp"
                android:hint="Описание"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editPhone" />

            <Button
                android:id="@+id/buttonDelete"
                style="@style/ButtonStyle"
                android:layout_marginTop="16dp"
                android:text="@string/DeleteContragent"
                app:layout_constraintTop_toBottomOf="@+id/editDescription"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/buttonSave"
                style="@style/ButtonStyle"
                android:layout_marginTop="5dp"
                android:text="@string/SaveContragent"
                app:layout_constraintTop_toBottomOf="@+id/buttonDelete"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>